!!!
%html
  %head
    %title= ApplicationDefs::APP_NAME
    = stylesheet_link_tag "application", media: 'all'
    = javascript_include_tag "application"
    = csrf_meta_tag
    = yield(:head)
  %body
    .container
      .app
        %p.notice= notice
        %p.alert= alert
        = link_to('Logout', destroy_user_session_path, method: :delete)
        = yield
